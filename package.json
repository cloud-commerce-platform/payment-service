{
  "name": "payment-service",
  "version": "1.0.0",
  "description": "Payment service handling order payments with hexagonal architecture",
  "main": "dist/index.js",
  "scripts": {
    "start": "node dist/index.js",
    "dev": "nodemon --exec ts-node -r tsconfig-paths/register src/index.ts",
    "build": "tsc && tsc-alias",
    "biome:check": "biome check .",
    "biome:fix": "biome check --write",
    "start:dev": "ts-node-dev --respawn --transpile-only src/index.ts",
    "new-migration": "docker compose run payment-dbmate new --",
    "apply-migrations": "docker compose run payment-dbmate"
  },
  "keywords": [
    "typescript",
    "nodejs",
    "hexagonal-architecture",
    "rabbitmq",
    "payment"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@alejotamayo28/event-contracts": "^1.0.2",
    "amqplib": "^0.10.9",
    "dotenv": "^17.2.3",
    "format": "^0.2.2",
    "moment": "^2.30.1",
    "pg": "^8.16.3",
    "pg-format": "^1.0.4",
    "reflect-metadata": "^0.2.2",
    "uuid": "^13.0.0"
  },
  "devDependencies": {
    "@biomejs/biome": "2.3.9",
    "@types/amqplib": "^0.10.5",
    "@types/node": "^20.11.20",
    "@types/pg": "^8.16.0",
    "@types/pg-format": "^1.0.5",
    "@types/uuid": "^10.0.0",
    "nodemon": "^3.0.3",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "tsc-alias": "^1.8.16",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.3.3"
  }
}
